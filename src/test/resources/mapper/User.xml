<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iteye.wwwcomy.dao.UserDao">
	<resultMap type="com.iteye.wwwcomy.model.User" id="userResult">
		<id property="userid" column="userid" />
		<result property="name" column="userName" />
		<result property="password" column="password" />
		<result property="salt" column="salt" />
		<result property="email" column="email" />
		<result property="phone" column="phone" />
		<result property="status" column="status" />
	</resultMap>
	<select id="loadUser" resultType="com.iteye.wwwcomy.model.User">
		select * from users where name
		= #{userName}
		<if test="password != null">
			AND password = #{password}
		</if>
		;
	</select>
	<select id="findById" resultType="com.iteye.wwwcomy.model.User">
		select * from users where
		userid = #{id};
	</select>
</mapper>