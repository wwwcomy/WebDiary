<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iteye.wwwcomy.dao.UserDao">
	<select id="loadUser" resultType="com.iteye.wwwcomy.model.User">
		select * from users where name
		= #{userName};
	</select>
	<select id="findById" resultType="com.iteye.wwwcomy.model.User">
		select * from users where
		userid = #{id};
	</select>
</mapper>